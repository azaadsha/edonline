 <!-- STUDENT'S REGISTRATION Form 
    ============================================= -->
    {{form.form_build_id}}
    {{form.form_id}}
           
        <div class="col-md-12 col-xs-12 login-custom">
            <h4>{{form.page_title}}</h4>
            <div class="col-md-6 col-xs-12">
                <div class="row">
                    <div class="form-group">
                    {{form.account.name}}
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="row">
                    <div class="form-group">
                    {{form.account.mail}}
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="row">
                    <div class="form-group">
                    {{form.field_first_name}}

                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="row">
                    <div class="form-group">
                    {{form.field_last_name}}
                     </div>
                </div>
            </div>
            
             <div class="col-md-6 col-xs-12">
                <div class="row">
                    <div class="form-group">
                    {{form.account.pass.pass1}}
                        
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="row">
                    <div class="form-group">
                    {{form.account.pass.pass2}}
                        
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 col-xs-12">
                <div class="row">
                    <div class="form-group phone_filed">
                        {{form.field_phone}}
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="row">
                    <div class="form-group">
                        {{form.field_date_of_birth}}
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="row">
                    <div class="form-group">
                        {{form.field_parent_email}}
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="row">
                    <div class="form-group phone_filed">
                        {{form.field_parent_phone}}
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="row">
                    {{form.field_level}}
                </div>
            </div>
            <div class="col-md-6 col-xs-12" id="school_options">
                <div class="row">
                    {{form.field_school}}
                </div>
            </div>
            <div class="col-md-6 col-xs-12" id="university_options">
                <div class="row">
                    {{form.field_university}}
                </div>
            </div>
             <div class="col-md-6 col-xs-12" id="polytechnic_options">
                <div class="row">
                    {{form.field_polytechnic}}
                </div>
            </div>
           
            <div class="col-md-6 col-xs-12">
                <div class="row">
                {{form.field_grade_year}}
                </div>
            </div>
             <div class="col-md-6 col-xs-12" id="school_other">
                <div class="row">
                    {{form.field_school_other}}
                </div>
            </div>
            <div class="col-md-6 col-xs-12" id="university_other">
                <div class="row">
                    {{form.field_university_other}}
                </div>
            </div>
            <div class="col-md-6 col-xs-12" id="polytechnic_other">
                <div class="row">
                    {{form.field_polytechnic_other}}
                </div>
            </div>

            <div class="col-md-6 col-xs-12">
                <div class="row">
                    {{form.field_date_of_joining}}
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="row">
                    {{form.field_department}}
                </div>
            </div>
            <div class="col-md-12 col-xs-12" style="text-align: center;">
                <div class="row">
                    {{form.actions}}
                </div>
            </div>
            <p class="link-bottom" style="text-align: center;">Are you a member? <a class="popup-with-form" href="/user/login">Login now</a></p>
        </div>
    
    <!-- End Register Form -->